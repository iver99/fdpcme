<?xml version='1.0'?>

<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
   xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config
   coherence-cache-config.xsd">
  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>lookupCache</cache-name>
      <scheme-name>lookup-cache-scheme</scheme-name>
    </cache-mapping>
    <cache-mapping>
       <cache-name>screenshotCache</cache-name>
       <scheme-name>eternal-screenshot-cache-scheme</scheme-name>
    </cache-mapping>
    <cache-mapping>
       <cache-name>eternalCache*</cache-name>
       <scheme-name>eternal-cache-scheme</scheme-name>
    </cache-mapping>
  </caching-scheme-mapping>
  <caching-schemes>
    <local-scheme>
      <scheme-name>lookup-cache-scheme</scheme-name>
      <eviction-policy>LRU</eviction-policy>
      <high-units>32000</high-units>
      <low-units>6</low-units>
      <unit-calculator>FIXED</unit-calculator>
      <expiry-delay>5s</expiry-delay>
      <pre-load>true</pre-load>
    </local-scheme>
    <local-scheme>
      <scheme-name>eternal-screenshot-cache-scheme</scheme-name>
      <eviction-policy>LRU</eviction-policy>
      <high-units>500</high-units>
      <low-units>10</low-units>
      <unit-calculator>FIXED</unit-calculator>
      <pre-load>true</pre-load>
    </local-scheme>
    <local-scheme>
      <scheme-name>eternal-cache-scheme</scheme-name>
      <eviction-policy>LRU</eviction-policy>
      <high-units>32000</high-units>
      <low-units>10</low-units>
      <unit-calculator>FIXED</unit-calculator>
      <pre-load>true</pre-load>
    </local-scheme>
  </caching-schemes>
</cache-config>