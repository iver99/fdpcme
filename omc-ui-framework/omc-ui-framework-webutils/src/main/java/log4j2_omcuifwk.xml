<?xml version="1.0" encoding="UTF-8"?>
<Configuration debug="false">
	<Properties>
        <Property name="dir">/var/opt/ORCLemaas/logs/omcUiFrameworkService</Property>
        <Property name="mainLog">omcUiFrameworkService.log</Property>
	    <Property name="mainPattern">[%d{DEFAULT}{UTC}] [%p] [%t] [EMSAAS] [OMC-UI-Framework] [%c{36}] T[%X{tenantId}] %m%n</Property>
        <Property name="errorLog">omcUiFrameworkService_error.log</Property>
	    <Property name="mainPatternDefault">[%d{DEFAULT}{UTC}] [%p] [%t] [EMSAAS] [OMC-UI-Framework] [%c{36}] T[N/A] %m%n</Property>
        <Property name="startupShutdownLog">omcUiFrameworkService_startup_shutdown.log</Property>
	    <Property name="startupShutdownPattern">[%d{DEFAULT}{UTC}] [%p] [%t] [EMAAS] [OMC-UI-Framework] %m%n</Property>
        <Property name="interactionLog">omcUiFrameworkService_interaction.log</Property>
	    <Property name="interactionPattern">[%d{DEFAULT}{UTC}] [%p] [%t] T[%X{tenantId}] [EMSAAS] [%X{serviceInvoked}] [%X{direction}] %m%n</Property>
    </Properties>
	<Appenders>
		<Routing name="MAIN_LOG">
			<Routes pattern="$${ctx:tenantId}">
				<Route key="$${ctx:tenantId}">
					<RollingFile name="MAIN_LOG_NO_TENANT" 
								 filename="${dir}/${mainLog}" 
								 filePattern="${dir}/${mainLog}-%i.log">
						<PatternLayout pattern="${mainPatternDefault}"/>
						<Policies>
							<SizeBasedTriggeringPolicy size="50 MB" />
						</Policies>
						<DefaultRolloverStrategy max="4" />
					</RollingFile>
				</Route>
				<Route>
					<RollingFile name="MAIN_LOG_DEFAULT" 
								 filename="${dir}/${mainLog}" 
								 filePattern="${dir}/${mainLog}-%i.log">
						<PatternLayout pattern="${mainPattern}"/>
						<Policies>
							<SizeBasedTriggeringPolicy size="50 MB" />
						</Policies>
						<DefaultRolloverStrategy max="4" />
					</RollingFile>
				</Route>
			</Routes>
		</Routing>
		<Routing name="ERROR_LOG">
			<Routes pattern="$${ctx:tenantId}">
				<Route key="$${ctx:tenantId}">
					<RollingFile name="ERROR_LOG_NO_TENANT" 
			   					 filename="${dir}/${errorLog}" 
								 filePattern="${dir}/${errorLog}-%i.log">
						<PatternLayout pattern="${mainPatternDefault}"/>
						<ThresholdFilter level="ERROR" onMatch="ACCEPT"/>
						<Policies>
							<SizeBasedTriggeringPolicy size="50 MB" />
						</Policies>
						<DefaultRolloverStrategy max="4" />
					</RollingFile>
				</Route>
				<Route>
					<RollingFile name="ERROR_LOG_DEFAULT" 
			   					 filename="${dir}/${errorLog}" 
								 filePattern="${dir}/${errorLog}-%i.log">
						<PatternLayout pattern="${mainPattern}"/>
						<ThresholdFilter level="ERROR" onMatch="ACCEPT"/>
						<Policies>
							<SizeBasedTriggeringPolicy size="50 MB" />
						</Policies>
						<DefaultRolloverStrategy max="4" />
					</RollingFile>
				</Route>
			</Routes>
		</Routing>
		<Async name="ASYNC_MAIN_LOG">
    		<AppenderRef ref="MAIN_LOG"/>
    		<AppenderRef ref="ERROR_LOG"/>
    	</Async>
		<RollingFile name="STARTUP_SHUTDOWN_LOG" 
			   		 filename="${dir}/${startupShutdownLog}" 
					 filePattern="${dir}/${startupShutdownLog}-%i.log">
			<PatternLayout pattern="${startupShutdownPattern}"/>
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
			<DefaultRolloverStrategy max="4" />
		</RollingFile>
		<Async name="ASYNC_STARTUP_SHUTDOWN_LOG">
    		<AppenderRef ref="STARTUP_SHUTDOWN_LOG"/>
    	</Async>
		<RollingFile name="INTERACTION_LOG" 
			   		 filename="${dir}/${interactionLog}" 
					 filePattern="${dir}/${interactionLog}-%i.log">
			<PatternLayout pattern="${interactionPattern}"/>
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
			<DefaultRolloverStrategy max="4" />
		</RollingFile>
		<Async name="ASYNC_INTERACTION_LOG">
    		<AppenderRef ref="INTERACTION_LOG"/>
    	</Async>
	</Appenders>
	<Loggers>
		<Logger name="oracle.sysman.emaas.platform.uifwk.ui.interaction.log" level="INFO">
    		<AppenderRef ref="ASYNC_INTERACTION_LOG"/>
		</Logger>
		<Logger name="oracle.sysman.emaas.platform.uifwk.ui.webutils" level="INFO">
    		<AppenderRef ref="ASYNC_STARTUP_SHUTDOWN_LOG"/>
		</Logger>
		<Logger name="oracle.sysman.emaas.platform.uifwk.ui" level="INFO"/>
		<Root>
    		<AppenderRef ref="ASYNC_MAIN_LOG"/>
    	</Root>
	</Loggers>
</Configuration>